{
    "useTabs": false,
    "printWidth": 140,
    "tabWidth": 4,
    "singleQuote": true,
    "trailingComma": "all",
    "jsxBracketSameLine": true,
    "semi": false,
    "overrides": [
        {
            "files": "*.scss",
            "options": {
                "parser": "scss"
            }
        },
        {
            "files": "*.css",
            "options": {
                "parser": "css"
            }
        },
        {
            "files": "*.html",
            "options": {
                "parser": "html"
            }
        },
        {
            "files": ["*.js", "*.jsx"],
            "options": {
                "semi": true,
                "parser": "babel"
            }
        },
        {
            "files": ["*.ts", "*.tsx"],
            "options": {
                "semi": true,
                "parser": "typescript"
            }
        },
        {
            "files": "*.json",
            "options": {
                "parser": "json"
            }
        }
    ]
}
